@page "/kassenbuch"
@rendermode InteractiveServer
@inject KassenbuchService Db

<PageTitle>Kassenbuch - ArGe Kassenbuch</PageTitle>

<h1 class="mb-4"><i class="bi bi-journal-text me-2"></i>Kassenbuch</h1>

@if (_aktiveVeranstaltung == null)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Keine aktive Veranstaltung. Bitte zuerst unter <a href="veranstaltungen">Veranstaltungen</a> eine aktivieren.
    </div>
}
else
{
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body text-center">
                    <div class="small">Einnahmen (Bons)</div>
                    <div class="fs-3 fw-bold">@_einnahmen.ToString("C", _culture)</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning text-dark">
                <div class="card-body text-center">
                    <div class="small">SafeBags (Tresor)</div>
                    <div class="fs-3 fw-bold">@_safeBagGesamt.ToString("C", _culture)</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body text-center">
                    <div class="small">Wechselgeld im Umlauf</div>
                    <div class="fs-3 fw-bold">@_wechselgeldImUmlauf.ToString("C", _culture)</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body text-center">
                    <div class="small">Bons gesamt</div>
                    <div class="fs-3 fw-bold">@_anzahlBons</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-bold">
                    <i class="bi bi-receipt me-2"></i>Bons nach Stand
                </div>
                <div class="card-body p-0">
                    @if (_bonNachStand.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Stand</th>
                                        <th class="text-end">Anzahl</th>
                                        <th class="text-end">Umsatz</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kv in _bonNachStand)
                                    {
                                        <tr>
                                            <td class="fw-bold">@kv.Key</td>
                                            <td class="text-end">@kv.Value.Count</td>
                                            <td class="text-end fw-bold text-success">
                                                @kv.Value.Where(b => !b.Storniert).Sum(b => b.Gesamtbetrag).ToString("C", _culture)
                                            </td>
                                        </tr>
                                    }
                                    <tr class="table-dark">
                                        <td class="fw-bold">Gesamt</td>
                                        <td class="text-end fw-bold">@_anzahlBons</td>
                                        <td class="text-end fw-bold">@_einnahmen.ToString("C", _culture)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted text-center py-4">Keine Bons vorhanden.</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-bold">
                    <i class="bi bi-bar-chart me-2"></i>Top-Artikel
                </div>
                <div class="card-body p-0">
                    @if (_topArtikel.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Artikel</th>
                                        <th class="text-end">Anzahl</th>
                                        <th class="text-end">Umsatz</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var art in _topArtikel.Take(10))
                                    {
                                        <tr>
                                            <td>@art.Name</td>
                                            <td class="text-end">@art.Anzahl</td>
                                            <td class="text-end fw-bold">@art.Umsatz.ToString("C", _culture)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted text-center py-4">Keine Daten vorhanden.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white fw-bold">
            <i class="bi bi-list-ul me-2"></i>Alle Bons
        </div>
        <div class="card-body p-0">
            @if (_bons.Any())
            {
                <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th>Nr.</th>
                                <th>Zeit</th>
                                <th>Stand</th>
                                <th>Bedienung</th>
                                <th>Positionen</th>
                                <th class="text-end">Betrag</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bon in _bons.OrderByDescending(b => b.ErstelltAm))
                            {
                                var standName = _staende.FirstOrDefault(s => s.Id == bon.VerkaufsstandId)?.Name ?? "-";
                                var bedName = _bedienungen.FirstOrDefault(b => b.Id == bon.BedienungId)?.VollerName ?? "-";
                                <tr class="@(bon.Storniert ? "table-danger" : "")">
                                    <td><span class="badge bg-secondary">@bon.BonNummer</span></td>
                                    <td>@bon.ErstelltAm.ToString("HH:mm:ss")</td>
                                    <td>@standName</td>
                                    <td>@bedName</td>
                                    <td>
                                        @foreach (var pos in bon.Positionen)
                                        {
                                            <span class="badge bg-light text-dark me-1">@pos.Anzahl x @pos.WareName</span>
                                        }
                                    </td>
                                    <td class="text-end fw-bold">@bon.Gesamtbetrag.ToString("C", _culture)</td>
                                    <td>
                                        @if (bon.Storniert)
                                        {
                                            <span class="badge bg-danger">Storniert</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">OK</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-muted text-center py-4">Keine Bons vorhanden.</div>
            }
        </div>
    </div>
}

@code {
    private static readonly System.Globalization.CultureInfo _culture = new("de-DE");
    private Veranstaltung? _aktiveVeranstaltung;
    private List<Bon> _bons = new();
    private List<Verkaufsstand> _staende = new();
    private List<Bedienung> _bedienungen = new();
    private Dictionary<string, List<Bon>> _bonNachStand = new();
    private List<ArtikelStat> _topArtikel = new();
    private decimal _einnahmen;
    private decimal _safeBagGesamt;
    private decimal _wechselgeldImUmlauf;
    private int _anzahlBons;

    protected override async Task OnInitializedAsync()
    {
        var einstellungen = await Db.GetEinstellungenAsync();
        if (einstellungen.AktiveVeranstaltungId.HasValue)
            _aktiveVeranstaltung = await Db.GetVeranstaltungAsync(einstellungen.AktiveVeranstaltungId.Value);

        _staende = await Db.GetVerkaufsstaendeAsync();
        _bedienungen = await Db.GetBedienungenAsync();

        if (_aktiveVeranstaltung != null)
        {
            var vid = _aktiveVeranstaltung.Id;
            _bons = await Db.GetBonsAsync(vid);
            _anzahlBons = _bons.Count(b => !b.Storniert);
            _einnahmen = _bons.Where(b => !b.Storniert).Sum(b => b.Gesamtbetrag);

            _safeBagGesamt = await Db.GetSafeBagGesamtAsync(vid);

            var wechselgeld = await Db.GetWechselgeldAsync(vid);
            var ausgegeben = wechselgeld.Where(w => w.Aktion == WechselgeldAktion.Ausgabe).Sum(w => w.Betrag);
            var zurueck = wechselgeld.Where(w => w.Aktion == WechselgeldAktion.Ruecknahme).Sum(w => w.Betrag);
            _wechselgeldImUmlauf = ausgegeben - zurueck;

            _bonNachStand = _bons
                .GroupBy(b =>
                {
                    var stand = _staende.FirstOrDefault(s => s.Id == b.VerkaufsstandId);
                    return stand?.Name ?? "Ohne Stand";
                })
                .ToDictionary(g => g.Key, g => g.ToList());

            _topArtikel = _bons
                .Where(b => !b.Storniert)
                .SelectMany(b => b.Positionen)
                .GroupBy(p => p.WareName)
                .Select(g => new ArtikelStat
                {
                    Name = g.Key,
                    Anzahl = g.Sum(p => p.Anzahl),
                    Umsatz = g.Sum(p => p.Gesamtpreis)
                })
                .OrderByDescending(a => a.Umsatz)
                .ToList();
        }
    }

    private class ArtikelStat
    {
        public string Name { get; set; } = "";
        public int Anzahl { get; set; }
        public decimal Umsatz { get; set; }
    }
}
